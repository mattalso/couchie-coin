with open(os.path.join(site_root, "styles.css"), "w") as f:
    f.write(styles_css)

# Zip the entire site folder
zip_path = "/mnt/data/couchie-website-package.zip"
shutil.make_archive(zip_path.replace(".zip", ""), 'zip', site_root)

